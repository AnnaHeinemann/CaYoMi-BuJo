<Window x:Class="CaYoMi_BuJo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaYoMi_BuJo"
        mc:Ignorable="d"
        Title="{Binding Title, FallbackValue=MainWindow}" Height="450" Width="800"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <DockPanel LastChildFill="False">
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar x:Name="toolBar">
                    <Button Content="New"></Button>
                    <Button Content="Settings"></Button>
                </ToolBar>
            </ToolBarTray>
            <ContentControl DockPanel.Dock="Left" prism:RegionManager.RegionName="NavigationRegion" />
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </DockPanel>
    </Grid>
</Window>
