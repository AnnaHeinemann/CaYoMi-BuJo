<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="CaYoMi_BuJo.DetailViews.JournalPageDetailView"
    mc:Ignorable="d"
    x:Name="journalPageDetailView"
    d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel x:Name="dockPanel">
        <TextBox 
            x:Name="journalPageTitle"
            Height="27" 
            Margin="0,10,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Text="{Binding Title}" IsUndoEnabled="True" IsEnabled="True" DockPanel.Dock="Top"/>
        <TextBox 
            x:Name="journalPageContent" 
            Text="{Binding Content}" IsEnabled="True" IsUndoEnabled="True"/>
    </DockPanel>
</UserControl>
