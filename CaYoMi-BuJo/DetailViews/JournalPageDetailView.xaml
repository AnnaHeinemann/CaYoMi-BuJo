<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:DetailViewModels="clr-namespace:ViewModel.DetailViewModels;assembly=CaYoMi_BuJo.ViewModel" x:Name="journalPageView" x:Class="CaYoMi_BuJo.DetailViews.JournalPageDetailView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="stackPanel">
            <TextBox 
                x:Name="textBlock" 
                Height="27" 
                Width="{Binding ActualWidth, ElementName=stackPanel}" 
                Margin="0,10,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Text="{Binding Title}"/>
            <TextBox 
                x:Name="journalPageContent" 
                Height="{Binding ActualHeight, ElementName=stackPanel}" 
                Width="{Binding ActualWidth, ElementName=stackPanel}" 
                Text="{Binding Content}"/>
        </StackPanel>
    </Grid>
</UserControl>
